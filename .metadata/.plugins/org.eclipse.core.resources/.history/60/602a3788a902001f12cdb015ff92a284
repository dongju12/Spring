	private MemberMapper mapper;
	
	// index.jsp를 띄워주는 메소드
	// @RequestMapping() 보다 Springboot에서는 @Get~ @Post~ Mapping 권장
	@GetMapping("/")
	public String index() {
		return "index";
	}
	
	@GetMapping("/mypage")
	public String mypage() {
		return "mypage";
	}

